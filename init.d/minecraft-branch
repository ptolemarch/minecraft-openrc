#!/sbin/runscript
# Minecraft: Branch mini-world
# vim:ft=gentoo-init-d

command='/usr/bin/tmux'
command_args='-L Minecraft new-window -n Branch /usr/bin/java -Xms512M -Xmx2048M -jar /opt/minecraft/spigot-1.8.8.jar'
start_stop_daemon_args='--user minecraft:minecraft --chdir /srv/minecraft/Branch'

depend() {
	need minecraft-any
}
